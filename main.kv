#: import NoTransition kivy.uix.screenmanager.NoTransition

WindowManager:
    transition: NoTransition()
    StartWindow:
        id: start
    SecondWindow:
        id: oob
    SlpQualWindow:
        id: slpql
    DreamsWindow:
        id: dreams
    TagsWindow:
        id: tags
    BedTimeWindow:
        id: bedtime

<StartWindow>:
    name: "start"
    MDLabel:
        text: "Good morning Emily!"
        pos_hint:{"center_x":.5,"center_y":.62}
        halign: 'center'
        font_size: self.width/20
        color: (0,.5,.75,1)

    MDLabel:
        text: "What time did you wake up this morning?"
        pos_hint: {'center_x': .5, 'center_y': .56}
        halign: 'center'
        font_size: self.width/30
        color: (0,.5,.75,1)

    TextInput:
        id: input
        multiline: False
        focus: True
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        size_hint: 0.2, 0.05
        on_text_validate: app.root.current = "oob"

    MDIconButton:
        id: check_btn
        icon: "checkbox-marked-circle"
        pos_hint: {'x': .61, 'top': .525}
        size_hint: (.05, .05)
        theme_icon_color: "Custom"
        icon_color: (0,.5,.75,1)
        on_release:
            app.root.current = "oob"

<SecondWindow>:
    name: "oob"
    MDLabel:
        text: "What time did you get out of bed this morning?"
        pos_hint: {'center_x': .5, 'center_y': .56}
        halign: 'center'
        font_size: self.width/30
        color: (0,.5,.75,1)

    TextInput:
        id: input
        multiline: False
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        size_hint: 0.2, 0.05
        on_text_validate: app.root.current = "slpql"

    MDIconButton:
        id: check_btn
        icon: "checkbox-marked-circle"
        pos_hint: {'x': .61, 'top': .525}
        size_hint: (.05, .05)
        theme_icon_color: "Custom"
        icon_color: (0,.5,.75,1)
        on_release: app.root.current = "slpql"

<SlpQualWindow>:
    name: "slpql"
    MDLabel:
        text: "How did you sleep?"
        pos_hint: {'center_x': .5, 'center_y': .56}
        halign: 'center'
        font_size: self.width/30
        color: (0,.5,.75,1)

    TextInput:
        id: input
        multiline: False
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        size_hint: 0.2, 0.05
        on_text_validate: app.root.current = "dreams"

    MDIconButton:
        id: check_btn
        icon: "checkbox-marked-circle"
        pos_hint: {'x': .61, 'top': .525}
        size_hint: (.05, .05)
        theme_icon_color: "Custom"
        icon_color: (0,.5,.75,1)
        on_release: app.root.current = "dreams"

<DreamsWindow>:
    name: "dreams"
    MDLabel:
        text: "What did you dream about?"
        pos_hint: {'center_x': .5, 'center_y': .56}
        halign: 'center'
        font_size: self.width/30
        color: (0,.5,.75,1)

    TextInput:
        id: input
        multiline: True
        size_hint: 0.2, 0.1
        height: '50dp'
        pos_hint: {'center_x': 0.5, 'center_y': 0.48}

    MDIconButton:
        id: check_btn
        icon: "checkbox-marked-circle"
        pos_hint: {'x': .61, 'top': .525}
        size_hint: (.05, .05)
        theme_icon_color: "Custom"
        icon_color: (0,.5,.75,1)
        on_release:
            app.root.current = "tags"
            app.p_stats()

<TagsWindow>:
    name: "tags"
    MDLabel:
        text: "What did you do today?"
        pos_hint: {'center_x': .5, 'center_y': .56}
        halign: 'center'
        font_size: self.width/30
        color: (0,.5,.75,1)

    TextInput:
        id: input
        multiline: False
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        size_hint: 0.2, 0.05
        on_text_validate: app.collect_tag(), app.clear_tag_input()

    MDRaisedButton:
        text: "Time for bed"
        pos_hint: {"center_x": 0.5, "center_y": 0.3}
        md_bg_color: app.theme_cls.primary_dark
        text_size: self.width, self.height
        on_release:app.root.current = "bedtime"

    MDIconButton:
        id: check_btn
        icon: "checkbox-marked-circle"
        pos_hint: {'x': .61, 'top': .525}
        size_hint: (.05, .05)
        theme_icon_color: "Custom"
        icon_color: (0,.5,.75,1)
        on_release:
            app.collect_tag()
            app.clear_tag_input()

<BedTimeWindow>:
    name: "bedtime"
    MDLabel:
        text: "What time did you go to bed?"
        pos_hint: {'center_x': .5, 'center_y': .56}
        halign: 'center'
        font_size: self.width/30
        color: (0,.5,.75,1)

    TextInput:
        id: input
        multiline: False
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        size_hint: 0.2, 0.05

    MDIconButton:
        id: check_btn
        icon: "checkbox-marked-circle"
        pos_hint: {'x': .61, 'top': .525}
        size_hint: (.05, .05)
        theme_icon_color: "Custom"
        icon_color: (0,.5,.75,1)
        on_release:
            app.p_stats()
            app.clear_inputs()
            app.root.current = "start"
